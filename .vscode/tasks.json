{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": ["pnpm: watch:tsc", "pnpm: watch:esbuild"],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:esbuild"],
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "label": "pnpm: watch:esbuild",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:tsc"],
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "label": "pnpm: watch:tsc",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },
    {
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch-tests"],
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build",
      "label": "pnpm: watch-tests"
    },
    {
      "label": "tasks: watch-tests",
      "dependsOn": ["pnpm: watch", "pnpm: watch-tests"],
      "problemMatcher": []
    }
  ]
}
