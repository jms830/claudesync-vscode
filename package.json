{
  "name": "claudesync",
  "displayName": "ClaudeSync",
  "description": "Sync your code with Claude AI assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudesync.setToken",
        "title": "ClaudeSync: Set Session Token"
      },
      {
        "command": "claudesync.initProject",
        "title": "ClaudeSync: Initialize Project"
      },
      {
        "command": "claudesync.syncCurrentFile",
        "title": "ClaudeSync: Sync Current File"
      },
      {
        "command": "claudesync.syncSelected",
        "title": "ClaudeSync: Sync Selected Files"
      },
      {
        "command": "claudesync.syncProjectInstructions",
        "title": "ClaudeSync: Sync Project Instructions"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "claudesync.syncSelected",
          "group": "claudesync",
          "when": "explorerViewletVisible"
        }
      ],
      "editor/context": [
        {
          "command": "claudesync.syncCurrentFile",
          "group": "claudesync",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "ClaudeSync",
      "properties": {
        "claudesync": {
          "type": "object",
          "properties": {
            "organizationId": {
              "type": "string",
              "description": "Claude AI organization ID"
            },
            "projectId": {
              "type": "string",
              "description": "Claude AI project ID"
            },
            "sessionToken": {
              "type": "string",
              "description": "Claude AI session token"
            },
            "excludePatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "node_modules/**",
                ".git/**",
                "dist/**",
                "build/**",
                "**/*.pyc",
                "**/__pycache__/**",
                ".env",
                ".env.*"
              ],
              "description": "Patterns to exclude from syncing"
            },
            "maxFileSize": {
              "type": "number",
              "default": 1048576,
              "description": "Maximum file size in bytes (default: 1MB)"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2"
  }
}
