{
  "name": "claudesync",
  "displayName": "ClaudeSync",
  "description": "Sync your code with Claude.ai Projects",
  "publisher": "rexdotsh",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudesync.setToken",
        "title": "ClaudeSync: Set Session Token"
      },
      {
        "command": "claudesync.initProject",
        "title": "ClaudeSync: Initialize Project"
      },
      {
        "command": "claudesync.syncCurrentFile",
        "title": "ClaudeSync: Sync Current File",
        "icon": {
          "light": "resources/sync-light.svg",
          "dark": "resources/sync-dark.svg"
        }
      },
      {
        "command": "claudesync.syncWorkspace",
        "title": "ClaudeSync: Sync Workspace",
        "icon": {
          "light": "resources/project-light.svg",
          "dark": "resources/project-dark.svg"
        }
      },
      {
        "command": "claudesync.syncProjectInstructions",
        "title": "ClaudeSync: Sync Project Instructions"
      },
      {
        "command": "claudesync.configureAutoSync",
        "title": "ClaudeSync: Configure Auto-Sync"
      },
      {
        "command": "claudesync.configureStartupSync",
        "title": "ClaudeSync: Configure Startup Sync"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "claudesync.syncCurrentFile",
          "group": "claudesync",
          "when": "editorTextFocus"
        }
      ],
      "editor/title": [
        {
          "command": "claudesync.syncCurrentFile",
          "group": "navigation@-3",
          "when": "resourceLangId"
        },
        {
          "command": "claudesync.syncWorkspace",
          "group": "navigation@-2",
          "when": "resourceLangId"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2"
  }
}
